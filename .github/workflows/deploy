  push:
    branches:
      - main  # Replace with your default branch name
 
jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
 
    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v2
 
      - name: Install Dependencies ğŸ”§
